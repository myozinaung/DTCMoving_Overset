FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      topoSetDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

actions
(
    {
        name    c0; // background, zoneID 0
        type    cellSet;
        action  new;
        source  regionsToCell;

        insidePoints ((-6 -0.05 0.0));
    }

    {
        name    c1;
        type    cellSet;
        action  new;
        source  cellToCell; // copy c0: c1 = c0 = background

        set     c0;
    }

    {
        name    c1;
        type    cellSet;
        action  invert; // c1 = opposite of background = all - bg = hull
    }

);


